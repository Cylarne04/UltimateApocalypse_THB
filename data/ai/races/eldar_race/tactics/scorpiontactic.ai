class 'ScorpionTactic' (EldarVehicleTactic)

Scorpion = {}

function ScorpionTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Scorpion Tactic")
	
	local sSquadName = squad_ai:GetSquadName()
	if (sSquadName == "eldar_squad_storm_serpent") then
		--self:AddToBunkerList()
		self.m_iTransportVehicle = 2
		self.m_iTransportSlots = 10
	end
end

function ScorpionTactic:Upgrade()

	if (not self.squad_ai:IsReinforcing()) then
	  
		-- Try for upgrade
		if (self.squad_ai:HasUpgradableTrooper()) then
			local class_type = cpu_manager:GetFirstEnemyPlayer():GetMajorityClassType()
			self.squad_ai:DoBestUpgrade( class_type )
		end
	end
end

function ScorpionTactic:InitAbilities()

end

function ScorpionTactic:DoAbilities()

end
