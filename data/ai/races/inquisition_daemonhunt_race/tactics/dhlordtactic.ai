function DHLordTactic:DoAbilities()

	-- Cast the Greater Power ability always and if we are in combat; and we can use it.
	if (self.squad_ai:CanDoAbility( DHLord.power )) then
		Ability.DoAbility( self.squad_ai, DHLord.power, Ability.Filters.IsInCombat )
	end
	
	-- Ordo Malleus Supreme Lord Orbital Bombardment
	Ability.DoAbilityPos(self.squad_ai, DHLord.orbital_bombard, Ability.Filters.CloseEnemy, 24)
	Ability.DoAbilityPos(self.squad_ai, DHLord.orbital_bombard, Ability.EntityFilters.CloseBaseEntityEnemy, 3)

	local spellcast_fury = 0.95
	
	if (self.squad_ai:GetHealthPercentage() < 0.8) then
		spellcast_fury = 0.75
		if (self.squad_ai:GetHealthPercentage() < 0.7) then
			spellcast_fury = 0.65
			if (self.squad_ai:GetHealthPercentage() < 0.6) then
				spellcast_fury = 0.4
				if (self.squad_ai:GetHealthPercentage() < 0.5) then
					spellcast_fury = 0.2
				end
			end
		end
	end
	
	-- If we are really dying...
	if (self.squad_ai:GetHealthPercentage() < 0.3) then
		spellcast_fury = 0.05 -- Only 5% morale remaining, full ability uses!!!
		
		if (self.squad_ai:CanDoAbility( DHLord.wrath )) then
			Ability.DoAbility( self.squad_ai, DHLord.wrath, Ability.Filters.IsInCombat )
		end
		
		if (self.squad_ai:CanDoAbility( DHLord.pop )) then
			Ability.DoAbility( self.squad_ai, DHLord.pop, Ability.Filters.IsInCombat )
		end
	end
	
	-- Normal spellcasting, morale.
	if (self.squad_ai:GetMoralePercentage() >= spellcast_fury) then
		-- Inquisitor Lord, Haste
		Ability.DoAbility( self.squad_ai, DHLord.haste_lord, Ability.Filters.IsInCombat ) 
		
		-- Ordo Malleus Supreme Lord, Haste
		Ability.DoAbility( self.squad_ai, DHLord.haste_ordo, Ability.Filters.IsInCombat ) 
		
		-- Inquisitor Lord, Doom of the Machine Spirit
		Ability.DoAbilityTarget( self.squad_ai, DHLord.doom_machine, Ability.Filters.CloseVehicleEnemy, 1 )
		
		-- Inquisitor Lord, Dark Commandment
		Ability.DoAbilityTarget( self.squad_ai, DHLord.commandment, Ability.Filters.CloseMonsterEnemy, 1 )
		
		if (self.squad_ai:GetMoralePercentage() >= 0.8) then
			-- Inquisitor Lord, Word of the Emperor, if attached
			if (self.squad_ai:IsAttached()) then
				Ability.DoAbility( self.squad_ai, DHLord.word, Ability.Filters.IsInCombat ) 
			end
			
			-- Inquisitor Lord, Inspiration through holy conquest
			Ability.DoAbility( self.squad_ai, DHLord.inspiration, Ability.Filters.IsInCombat )
		end
		
		-- Inquisitor Lord, Mightest Swing
		Ability.DoAbilityPos( self.squad_ai, DHLord.banish, Ability.Filters.CloseMonsterEnemy, 1 )
		Ability.DoAbilityPos( self.squad_ai, DHLord.banish, Ability.Filters.CloseCommanderEnemy, 1 )
		
		-- Ordo Malleus Supreme Lord, Weaken Resolve
		Ability.DoAbilityTarget( self.squad_ai, DHLord.weaken, Ability.Filters.CloseInfantryEnemy, 4 )
		
		-- Ordo Malleus Supreme Lord, Smite
		Ability.DoAbilityTarget( self.squad_ai, DHLord.smite, Ability.Filters.CloseEnemy, 4 )
		
		-- Inquisitor Lord, Slow
		Ability.DoAbilityTarget( self.squad_ai, DHLord.slow, Ability.Filters.CloseInfantryEnemy, 6 )
		
		-- Inquisitor Lord, Doom
		Ability.DoAbilityTarget( self.squad_ai, DHLord.doom, Ability.Filters.CloseInfantryEnemy, 3 )
		
		-- Inquisitor Lord, Fireball
		Ability.DoAbilityPos( self.squad_ai, DHLord.fireball, Ability.Filters.CloseEnemy, 7 )
		
		-- Inquisitor Lord, Lightning Balls
		Ability.DoAbilityPos( self.squad_ai, DHLord.lightning_balls, Ability.Filters.CloseEnemy, 5 )
		Ability.DoAbilityPos( self.squad_ai, DHLord.lightning_balls, Ability.Filters.CloseInfiltratedEnemy, 1 )
		
		
	end

	
end

function DHLordTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
		
	-- Assassinate win condition -- never attach to a squad
	if (not cpu_manager.assassinate) then
		
		-- Attach to melee in tier3+
		if (cpu_manager:GetTierLevel() > 2) then
		
			if (self:TryAttachSquad(true, true, 50, 100, nil) ~= nil) then
				return
			end
		end
		if (self:TryAttachSquad(false, true, 50, 100, self.m_fCommanderAttachHealth) == nil) then


			self:TryAttachSquadMelee()
		end
	end
end
