class 'DarkEldarPhoenixTactic' (DarkEldarVehicleTactic)

DarkEldarPhoenix = {}

function DarkEldarPhoenixTactic:__init( squad_ai ) super( squad_ai )
	
	self:SetName("Dark Eldar Phoenix Tactic")
end

function DarkEldarPhoenixTactic:InitAbilities()

	if (DarkEldarPhoenix.bomb_id == nil) then
		DarkEldarPhoenix.bomb_id = cpu_manager.stats:GetAbilityID( "dark_eldar_bombard_phoenix" )	
	end
	if (DarkEldarPhoenix.bomb_improved_id == nil) then
		DarkEldarPhoenix.bomb_improved_id = cpu_manager.stats:GetAbilityID( "dark_eldar_bombard_voidraven" )	
	end
	
end

function DarkEldarPhoenixTactic:DoAbilities()

	if (self.squad_ai:CanDoAbility(DarkEldarPhoenix.bomb_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(DarkEldarPhoenix.bomb_id)
		local oUnit = Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil) then
			self.squad_ai:DoSpecialAbilitySquad(DarkEldarPhoenix.bomb_id, oUnit:GetSquad())
		end
	end
	
	if (self.squad_ai:CanDoAbility(DarkEldarPhoenix.bomb_improved_id)) then
	
		-- Search a squad
		local iRange = self.squad_ai:GetAbilityRange(DarkEldarPhoenix.bomb_improved_id)
		local oUnit = Ability.Filters.CloseEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oUnit ~= nil) then
			self.squad_ai:DoSpecialAbilitySquad(DarkEldarPhoenix.bomb_improved_id, oUnit:GetSquad())
		end
	end
	
	-- Try to spawn Fighters
	if (self.timedDirectSpawnAbility ~= nil) then
		self.timedDirectSpawnAbility:Call()
	else
		DarkEldarPhoenixTactic.DoDirectSpawnAbility(self)
	end

end

