class 'NecronShieldTactic' (BaseTactic)

NecronShield = {}

function NecronShieldTactic:__init( base_ai ) super( base_ai )

	self:SetName("Necron Shield Tactic")
end

function NecronShieldTactic:InitAbilities()

	-- Init ability ID's
	if (NecronShield.shield_id == nil) then
		NecronShield.shield_id = cpu_manager.stats:GetAbilityID( "necron_shield_spike" )
	end
	--[[if (NecronShield.shield2_id == nil) then
		NecronShield.shield2_id = cpu_manager.stats:GetAbilityID( "necron_shield_spike_improved" )
	end]]
end

function NecronShieldTactic:DoAbilities()
	
	if (self.base_ai:CanDoAbility(NecronShield.shield_id)) then
	
		if (self.base_ai:GetHealthPercentage() < 0.9 and not self.base_ai:IsUsingAbility(NecronShield.shield_id)) then

			-- Activate the Base Shields
			self.base_ai:DoSpecialAbility(NecronShield.shield_id)
			
		elseif (not self.base_ai:IsInCombat() and self.base_ai:IsUsingAbility(NecronShield.shield_id)) then

			-- Deactivate the Base Shields
			self.base_ai:DoSpecialAbility(NecronShield.shield_id)
		end
	--[[elseif (self.base_ai:CanDoAbility(NecronShield.shield2_id)) then
	
		if (self.base_ai:GetHealthPercentage() < 0.9 and not self.base_ai:IsUsingAbility(NecronShield.shield2_id)) then

			-- Activate the Base Shields
			self.base_ai:DoSpecialAbility(NecronShield.shield2_id)
			
		elseif (not self.base_ai:IsInCombat() and self.base_ai:IsUsingAbility(NecronShield.shield2_id)) then

			-- Deactivate the Base Shields
			self.base_ai:DoSpecialAbility(NecronShield.shield2_id)
		end]]
	end
end
