class 'MakoTactic' (TauVehicleTactic)

Mako = {}

function MakoTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Mako Tactic")
end

function MakoTactic:InitAbilities()

	-- Init ability ID's
	if (Mako.barrage == nil) then
		Mako.barrage = cpu_manager.stats:GetAbilityID( "tau_titan_missile_barrage" )
	end
	
	if (Mako.overshield == nil) then
		Mako.overshield = cpu_manager.stats:GetAbilityID( "tau_overshield_riptide" )
	end
end

function MakoTactic:DoAbilities()

	Ability.DoAbilityTarget(self.squad_ai, Mako.barrage, Ability.Filters.CloseSquadEnemy, 6)
	
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.8) then
		Ability.DoAbility( self.squad_ai, Mako.overshield, Ability.PredicateFilters.IsInCombat ) 
	end
end
