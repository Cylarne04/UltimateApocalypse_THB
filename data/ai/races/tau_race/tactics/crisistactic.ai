class 'CrisisTactic' (TauInfantryTactic)

Crisis = {}

function CrisisTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Crisis Tactic")
end

function CrisisTactic:InitAbilities()

	-- Init ability ID's
	if (Crisis.shield == nil) then
		Crisis.shield = cpu_manager.stats:GetAbilityID( "tau_personal_shield" )
	end
end

function CrisisTactic:DoAbilities()
	
	-- Activate the shields.
	if (self.squad_ai:WasRecentlyHurt() and self.squad_ai:GetHealthPercentage() < 0.8) then
		Ability.DoAbility( self.squad_ai, Crisis.shield, Ability.PredicateFilters.IsInCombat ) 
	end
end

function CrisisTactic:Upgrade()

	-- Check if we have free ressources
	if (not Tactic.Options.can_reinforce) then
		return
	end
	
	-- If I am broken, don't upgrade!
	if (self:IsAffectedByMorale() and self.squad_ai:IsBroken()) then
		return
	end

	if (not self.squad_ai:IsReinforcing()) then
	
		-- Upgrade if possible
		if (self.squad_ai:HasUpgradableTrooper() and self.squad_ai:GetNumTroopers() > 0) then
			local class_type = cpu_manager:GetFirstEnemyPlayer():GetMajorityClassType()
			self.squad_ai:DoBestUpgrade( class_type )
		end
	end
end
