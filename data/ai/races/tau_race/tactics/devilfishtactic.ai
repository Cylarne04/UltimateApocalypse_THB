class 'DevilfishTactic' (TauVehicleTactic)

Devilfish = {}

function DevilfishTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Devilfish Tactic")
	
	-- Vehicle is a light transport
	self.m_iTransportVehicle = 1
	self.m_iTransportSlots = 2
end

function DevilfishTactic:InitAbilities()

	if (Devilfish.infiltration == nil) then
		Devilfish.infiltration = cpu_manager.stats:GetAbilityID( "all_infiltration" )
	end
end

function DevilfishTactic:DoAbilities()
	
	-- Infiltration
	--[[ Not using infiltration
	if (self.squad_ai:CanDoAbility(Devilfish.infiltration) and (self.squad_ai:GetHealthPercentage() <= 0.3) and not self.squad_ai:IsUsingAbility(Devilfish.infiltration)) then
	if (self.squad_ai:CanDoAbility(StealthTeam.infiltration) and (self.squad_ai:GetHealthPercentage() <= 0.9) and not self.squad_ai:IsUsingAbility(StealthTeam.infiltration)) then
		self.squad_ai:DoSpecialAbility(Devilfish.infiltration)
		
	-- Using infiltration 
	elseif (self.squad_ai:IsInCombat() and self.squad_ai:IsUsingAbility(Devilfish.infiltration)) then
		self.squad_ai:DoSpecialAbility(Devilfish.infiltration)
	end]]
	
	-- Call basic DoAbilities methods
	--DevilfishTactic.DoAbilities(self)
end


