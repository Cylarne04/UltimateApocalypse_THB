class 'ShieldGeneratorTactic' (BaseTactic)

ShieldGenerator = {}

function ShieldGeneratorTactic:__init( base_ai ) super( base_ai )

	self:SetName("Shield Generator Tactic")
end

function ShieldGeneratorTactic:InitAbilities()

	-- Init ability ID's
	if (ShieldGenerator.shield_id == nil) then
		ShieldGenerator.shield_id = cpu_manager.stats:GetAbilityID( "tau_base_shield_shield_generator" )
	end
end

function ShieldGeneratorTactic:DoAbilities()

	--[[if (self.base_ai:CanDoAbility(ShieldGenerator.shield_id)) then
	
		if (self.base_ai:IsInCombat() and self.base_ai:GetHealthPercentage() > 0.3 and not self.base_ai:IsUsingAbility(ShieldGenerator.shield_id)) then

			-- Activate the Base Shields
			self.base_ai:DoSpecialAbility(ShieldGenerator.shield_id)
		end	
		if (not self.base_ai:IsInCombat() and self.base_ai:IsUsingAbility(ShieldGenerator.shield_id)) then

			-- Deactivate the Base Shields
			self.base_ai:DoSpecialAbility(ShieldGenerator.shield_id)
		end
	end]]
end