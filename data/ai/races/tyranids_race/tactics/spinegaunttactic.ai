class 'SpinegauntTactic' (TyranidInfantryTactic)

Spinegaunt = {}

function SpinegauntTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Spinegaunt Tactic")

	
	self.m_iTacticaID = cpu_manager.stats:GetBuildingID("tyranids_biomorph_hive")
end

function SpinegauntTactic:InitAbilities()

	-- None
end

function SpinegauntTactic:DoAbilities()

	-- None
	
end

function SpinegauntTactic:Reinforce()

	-- Do not reinforce if morale is broken!
	if (self.squad_ai:IsBroken()) then
		return
	end
	
	-- Always try to reinforce if we have a Tactica Control, and is ready to spam attack.
	local iRequisition = resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Requisition)
	if (not self.squad_ai:IsReinforcing() and cpu_manager.player_stats:GetNumBasesByBPID(self.m_iTacticaID, true) > 0 and iRequisition > 300) then
	    self.squad_ai:DoReinforce( false, 0 )
	else 
		return
	end
end

function SpinegauntTactic:AlwaysAttack()
	return (cpu_manager.player_stats:GetNumBasesByBPID(self.m_iTacticaID, true) > 0)
end
