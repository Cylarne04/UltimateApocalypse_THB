class 'PsykerTactic' (GuardInfantryTactic)

Psyker = {}

function PsykerTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Psyker Tactic")
end

function PsykerTactic:IsAttacker()
	return self:IsCommanderAttacker()
end

function PsykerTactic:IsDefender()
	return self:IsCommanderDefender()
end

function PsykerTactic:InitAbilities()

	-- Init ability ID's
	if (Psyker.lightning_id == nil) then
		Psyker.lightning_id = cpu_manager.stats:GetAbilityID( "guard_psyker_lightning_arc" )	
	end
	if (Psyker.strip_id == nil) then
		Psyker.strip_id = cpu_manager.stats:GetAbilityID( "guard_psyker_strip_soul" )	
	end
	if (Psyker.curse_id == nil) then
		Psyker.curse_id = cpu_manager.stats:GetAbilityID( "guard_curse_machine_spirits" )	
	end
	
	-------------Primaris
	if (Psyker.haste_id == nil) then
		Psyker.haste_id = cpu_manager.stats:GetAbilityID( "guard_haste" )	
	end
end

function PsykerTactic:DoAbilities()

	-- Target infantry
	Ability.DoAbilityTarget( self.squad_ai, Psyker.lightning_id, Ability.Filters.CloseSquadEnemy, 4 ) 
	
	-- Target commanders
	Ability.DoAbilityTarget( self.squad_ai, Psyker.strip_id, Ability.Filters.CloseCommanderEnemy, 1 )
	
	-- Target vehicles
	Ability.DoAbilityTarget( self.squad_ai, Psyker.curse_id, Ability.Filters.CloseVehicleEnemy, 1 )
	
	-- Haste
	Ability.DoAbility( self.squad_ai, Psyker.haste_id, Ability.Filters.IsInCombat )
	
	-- Personal Shields
	local id_Shields = cpu_manager.stats:GetAbilityID("guard_personal_shield_psyker")
	
	if (((self.squad_ai:IsUsingAbility(id_Shields) and self.squad_ai:GetMoralePercentage() < 0.1) or
		(self.squad_ai:IsUsingAbility(id_Shields) == false and self.squad_ai:GetMoralePercentage() == 1)) and
		self.squad_ai:CanDoAbility(id_Shields)) then
		self.squad_ai:DoSpecialAbility(id_Shields)
	end
	
	-- Soulripper
	local id_Ripper = cpu_manager.stats:GetAbilityID("guard_soulripper")
	
	if (((self.squad_ai:IsUsingAbility(id_Ripper) and self.squad_ai:GetHealthPercentage() > 0.7) or
		(self.squad_ai:IsUsingAbility(id_Ripper) == false and self.squad_ai:GetHealthPercentage() <= 0.7 and self.squad_ai:IsInCombat())) and
		self.squad_ai:CanDoAbility(id_Ripper)) then
		self.squad_ai:DoSpecialAbility(id_Ripper)
	end
end

function PsykerTactic:Update()

   if self:IsComplete() then
      return
   end

   --state machine
   if not InfantryTactic.Update( self ) then
      return
   end

   --attach to squad
   self:TryAttachSquad( false, false, 1000, 100, nil )
end

