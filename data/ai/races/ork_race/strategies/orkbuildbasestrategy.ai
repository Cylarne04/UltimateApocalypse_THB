		self:DynamicResearch("ork_research_tech_nukklear_bomma", 5, 0, 600, 0, 0, nil, 0)
	elseif (self.m_iJeeChoice <= 810) then
		self:DynamicResearch("ork_research_tech_nobz", 3, 0, 140, 0, 0, nil, 0)
