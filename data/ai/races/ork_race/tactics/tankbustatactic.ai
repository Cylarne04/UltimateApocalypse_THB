class 'TankbustaTactic' (OrkInfantryTactic)

Tankbusta = {}

function TankbustaTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Tankbusta Tactic")
end

function TankbustaTactic:InitAbilities()

	-- Init ability ID's
	if (Tankbusta.bomb_id == nil) then
		Tankbusta.bomb_id = cpu_manager.stats:GetAbilityID("ork_tankbusta_bombs")
	end
	if (Tankbusta.infiltration_id == nil) then
		Tankbusta.infiltration_id = cpu_manager.stats:GetAbilityID( "ork_infiltration_tankbustaz" )	
	end
end

function TankbustaTactic:DoAbilities()
	
	-- Try to use tank busta bomb ability
	Ability.DoAbilityTarget(self.squad_ai, Tankbusta.bomb_id, Ability.Filters.CloseVehicleEnemy, 1)
	
	-- Call basic DoAbilities methods
	OrkInfantryTactic.DoAbilities(self)
	
	-- Not using infiltration
	if (self.squad_ai:CanDoAbility(Tankbusta.infiltration_id) and (self.squad_ai:GetHealthPercentage() <= 0.5) and not self.squad_ai:IsUsingAbility(Tankbusta.infiltration_id)) then
		self.squad_ai:DoSpecialAbility(Tankbusta.infiltration_id)
		
	-- Using infiltration 
	elseif (self.squad_ai:IsInCombat() and self.squad_ai:IsUsingAbility(Tankbusta.infiltration_id)) then
		self.squad_ai:DoSpecialAbility(Tankbusta.infiltration_id)
	end
end

function TankbustaTactic:CheckDance(oSquad)

	-- Check opponent
	if (oSquad == nil) then
		return false
	end
	
	-- Check opponent
	if (oSquad:GetSquadName() == "chaos_squad_cultist") then
		return false
	end
	return true
end